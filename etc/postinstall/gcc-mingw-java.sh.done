#!/bin/sh
[ -f /etc/postinstall/gcc-mingw-java-3.4.4-20050522-3.tar.xz ] || exit 0
/bin/mkdir -p /usr/i686-pc-mingw32
cd /usr/i686-pc-mingw32
for d in include lib bin
do
  if [ -e /usr/i686-pc-mingw32/$d -a -h /usr/i686-pc-mingw32/$d ]
  then
    rm -f /usr/i686-pc-mingw32/$d
  fi
done
echo "*** Unpacking /etc/postinstall/gcc-mingw-java-3.4.4-20050522-3.tar.xz.  Please wait. ***"
/bin/tar -xvJf /etc/postinstall/gcc-mingw-java-3.4.4-20050522-3.tar.xz -C /usr |\
	/bin/sort -r > /etc/preremove/gcc-mingw-java-manifest.tmp

echo "*** Creating symbolic links for jc1.exe and jvgenmain.exe.  Please wait. ***"
cd /usr/lib/gcc/i686-pc-mingw32/3.4.4
ln -fs ../../i686-pc-cygwin/3.4.4/jc1.exe .
ln -fs ../../i686-pc-cygwin/3.4.4/jvgenmain.exe .

echo lib/gcc/i686-pc-mingw32/3.4.4/jc1.exe       >> /etc/preremove/gcc-mingw-java-manifest.tmp
echo lib/gcc/i686-pc-mingw32/3.4.4/jvgenmain.exe >> /etc/preremove/gcc-mingw-java-manifest.tmp

cat /etc/preremove/gcc-mingw-java-manifest.tmp | sort -r > /etc/preremove/gcc-mingw-java-manifest.lst
rm -f /etc/preremove/gcc-mingw-java-manifest.tmp

