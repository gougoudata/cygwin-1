#!/bin/sh

prefix=/usr
exec_prefix=/usr
exec_prefix_set=no

usage="\
Usage: aalib-config [--prefix[=DIR]] [--exec-prefix[=DIR]] [--version] [--libs] [--cflags]"

if test $# -eq 0; then
      echo "${usage}" 1>&2
      exit 1
fi

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
        exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo $prefix
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo $exec_prefix
      ;;
    --version)
      echo 1.4.0
      ;;
    --cflags)
      if test ${prefix}/include != /usr/include ; then
          # Handle oddities in Win32 path handling (assumes prefix)
          prefix=`echo ${prefix} | sed 's,^//\([A-Z]\),\1:,'`

          includes=-I${prefix}/include
      fi
      echo -I${prefix}/include 
      ;;
    --libs)
      libdirs="-L${exec_prefix}/lib "
      echo $libdirs -laa -lm   -lX11  -lslang  -lncurses
      ;;
#    --static-libs)
##    --libs|--static-libs)
#      libdirs="-L${exec_prefix}/lib "
#      echo $libdirs -laa -lm   -lX11  -lslang  -lncurses 
#      ;;
    *)
      echo "${usage}" 1>&2
      exit 1
      ;;
  esac
  shift
done
